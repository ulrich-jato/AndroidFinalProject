<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E9D7EF">

    <TextView
        android:id="@+id/currencyFrom"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="USD"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:src="@drawable/baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/currencyTo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="CAD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/currencyFrom"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amountFrom"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="123.0"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyFrom" />


    <TextView
        android:id="@+id/amountTo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="333.0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/amountFrom"
        app:layout_constraintTop_toBottomOf="@+id/currencyTo" />


</androidx.constraintlayout.widget.ConstraintLayout>