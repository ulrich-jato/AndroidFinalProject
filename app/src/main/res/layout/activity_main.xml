<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/final_project" />


    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <androidx.cardview.widget.CardView
            android:id="@+id/aviation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/aviation_img"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/maviation" />

                <TextView
                    android:id="@+id/aviationText"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/aviation_img"
                    android:text="Track flights, check depatures and arrivals from any airport in the world and plan your flights accordingly"
                    android:textAlignment="center"
                    android:textColor="#FFFF"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/aviationText"
                    android:background="@color/my_primary"
                    android:text="Launch"
                    android:textAlignment="center"
                    android:textColor="#FFF" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/currency"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/currency_img"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mcurrency" />

                <TextView
                    android:id="@+id/currencyText"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/currency_img"
                    android:textAlignment="center"
                    android:text="Currency converter application to assist you with getting latest currency rates globally"
                    android:textColor="#FFFF"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/currencyText"
                    android:background="@color/my_primary"
                    android:text="Launch"
                    android:textAlignment="center"
                    android:textColor="#FFF">

                </TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/trivia"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_dark_background">

                <ImageView
                    android:id="@+id/trivia_img"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mtrivia" />

                <TextView
                    android:id="@+id/triviaText"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/trivia_img"
                    android:textAlignment="center"
                    android:text="You think you are smarter than a 10 year old? Try this trivia app to proof them wrong."
                    android:textColor="#FFFF"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/triviaText"
                    android:background="@color/my_primary"
                    android:text="Launch"
                    android:textAlignment="center"
                    android:textColor="#FFF">

                </TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bearImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_dark_background">

                <ImageView
                    android:id="@+id/bear_img"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mbear" />

                <TextView
                    android:id="@+id/bearText"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/bear_img"
                    android:textAlignment="center"
                    android:text="For those who love the wilderness and can't face the mighty grizzlies in the open so they stare from behind the screen."
                    android:textColor="#FFFF"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/bearText"
                    android:background="@color/my_primary"
                    android:text="Launch"
                    android:textAlignment="center"
                    android:textColor="#FFF">

                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>